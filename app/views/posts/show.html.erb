<h1>
  <%= @post.title %>
</h1>
<%= @post.content %><br>
<%= link_to "edit", edit_post_path(@post) %> |
<%= link_to "delete", @post, method: :delete, data: { confirm: "Are you sure?" } %>

<h3>Comments</h3>

<% @comments.each do |c| %>
  <div>
    <%= c.content %>
  </div>
<% end %>

<%= form_for [@post, Comment.new] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Submit comment" %>
<% end %>
