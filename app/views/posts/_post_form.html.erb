<%= form_for @post, html: {class: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="checkbox">
    <%= f.label :include_in_nav do %>
      <%= f.check_box :include_in_nav %> Include in navigation?
    <% end %>
  </div>
  <div class="checkbox">
    <%= f.label :commentable do %>
      <%= f.check_box :commentable %> Allow comments?
    <% end %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>