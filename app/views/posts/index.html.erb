<div class="page-header">
  <%= link_to "new post", new_post_path, class: "btn btn-primary pull-right" %>
  <h1>All Posts</h1>
</div>


<% @posts.each do |post| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to post.title, post_path(post) %>
      </h3>
    </div>
    <div class="panel-body">
      <%= post.content %><br>
      <%= link_to("#{pluralize post.comments.length, "comment"}", post) if post.comments.length > 0 %>
      <div class="pull-right">
        <%= link_to "edit", edit_post_path(post), class: "btn btn-default btn-xs" %>
        <%= link_to post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs" do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>