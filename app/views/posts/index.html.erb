<h2>Nav:</h2>
<nav class="navbar navbar-default">
  <ul id="sortable" class="nav navbar-nav" update_url="<%= sort_posts_path %>" >
    <% @nav_items.each do |post| %>
      <li data-post-id="<%= post.id %>" class="item">
        <%= link_to post.title + " - drag", post_path(post) %>
      </li>
    <% end %>
  </ul>
</nav>

<div class="page-header">
  <%= link_to "new post", new_post_path, class: "btn btn-primary pull-right" %>
  <h1>All Posts</h1>
</div>


<% @posts.each do |post| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to post.title, post_path(post) %>
      </h3>
    </div>
    <div class="panel-body">
      <%= post.content %>
      <div class="pull-right">
        <%= link_to "edit", edit_post_path(post), class: "btn btn-default btn-xs" %>
        <%= link_to post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs" do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>