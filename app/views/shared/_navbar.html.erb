<nav class="navbar navbar-default navbar-fixed-top">
  <ul id="sortable" class="nav navbar-nav" update_url="<%= sort_posts_path %>" >
    <% @nav_items.each do |post| %>
      <% if post.include_in_nav? %>
        <li data-post-id="<%= post.id %>" class="<%= @admin ? 'item' : '' %>">
            <%= link_to post.title, post_path(post) %>
        </li>
      <% end %>
    <% end %>

    <% if current_user %>
      <% if current_user.admin == true %>
        <li>
          <%= link_to new_post_path do %>
            <span class="glyphicon glyphicon-pencil"></span> New Post
          <% end %>
        </li>
        <li>
          <%= link_to all_posts_path do %>
            All Posts
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "Logout", :logout, method: :post %>
      </li>
    <% else %>
      <li>
        <%= link_to "Register", new_user_path %>
      </li>
      <li>
        <%= link_to "Login", :login %>
      </li>
    <% end %>
  </ul>
</nav>