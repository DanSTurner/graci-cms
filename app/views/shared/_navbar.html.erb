      <%= link_to new_post_path do %>
        <span class="glyphicon glyphicon-pencil"></span> New Post
      <% end %>
    </li>
    <li>
      <%= link_to all_posts_path do %>
        All Posts
      <% end %>
    </li>
  </ul>
</nav>